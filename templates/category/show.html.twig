{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>{{ category.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Œuvres Disponibles</h2>
    <ul>
        {% for oeuvre in oeuvres %}
            <li>{{ oeuvre.name }}</li>
        {% else %}
            <li>Aucune œuvre disponible pour cette catégorie.</li>
        {% endfor %}
    </ul>

    <a href="{{ path('app_category_index') }}">Retour à la liste</a>
    <a href="{{ path('app_category_edit', {'id': category.id}) }}">Modifier</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
