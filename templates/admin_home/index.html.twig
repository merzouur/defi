{# templates/admin_home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Admin Home{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .btn-container { margin-top: 20px; }
    .btn-container a { margin-right: 10px; text-decoration: none; color: white; background-color: #007bff; padding: 10px 20px; border-radius: 5px; }
    .btn-container a:hover { background-color: #0056b3; }
</style>

<div class="example-wrapper">
    <h1>Bienvenue Admin, choisissez ce que vous voulez créer aujourd'hui</h1>

    <div class="btn-container">
        <a href="{{ path('app_oeuvre_new') }}">Créer une Oeuvre</a>
        <a href="{{ path('app_category_new') }}">Créer une catégorie</a>
        <a href="{{ path('app_figurine_new') }}">Créer une figurine </a>
    </div>
</div>
{% endblock %}
