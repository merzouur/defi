{# templates/error/access_denied.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Accès refusé</title>
    <script>
        let timeLeft = 3;

        function updateCountdown() {
            const countdownElement = document.getElementById('countdown');
            countdownElement.textContent = `Vous serez redirigé vers la page d'accueil dans ${timeLeft} secondes...`;
            timeLeft--;

            if (timeLeft < 0) {
                window.location.href = "{{ path('app_home') }}";
            }
        }

        setInterval(updateCountdown, 1000);
    </script>
</head>
<body>
    <h1>Accès refusé</h1>
    <p>Désolé, vous n'avez pas les autorisations nécessaires pour accéder à cette page.</p>
    <p id="countdown">
</body>
</html>
